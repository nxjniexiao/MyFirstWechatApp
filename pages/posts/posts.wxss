/* pages/posts/posts.wxss */
swiper{
  width: 100%;
  height: 500rpx;
  position: relative;
}
swiper image{
  width: 100%;
  height: 500rpx;
}
swiper .slide-desc{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  padding: 10rpx;
}
swiper .slide-desc text{
  margin-left: 20rpx;
  color: white;
}
.post-container{
  margin-top: 40rpx;
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}
/* .post-Container .post-author{

} */
.post-container .post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  margin-right: 40rpx;
}
.post-container .post-date{
  font-size: 26rpx;
  vertical-align: middle;
  color: #666;
}
.post-container .post-title{
  margin: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}
.post-container .post-pic{
  width: 750rpx;
  height: 300rpx;
}
.post-container .post-desc{
  margin: 30rpx 20rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #666;
}
.post-container .post-info{
  flex-direction: row;
}
.post-container .post-info image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.post-container .post-info text{
  font-size: 26rpx;
  vertical-align: middle;
  color: #666;
}