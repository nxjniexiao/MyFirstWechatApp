/* pages/posts/posts.wxss */
@import 'posts-item/posts-item-template.wxss';
swiper{
  width: 100%;
  height: 500rpx;
  position: relative;
}
swiper image{
  width: 100%;
  height: 500rpx;
}
swiper .slide-desc{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  padding: 10rpx;
}
swiper .slide-desc text{
  margin-left: 20rpx;
  color: white;
}
.post-container{
  margin-top: 40rpx;
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}