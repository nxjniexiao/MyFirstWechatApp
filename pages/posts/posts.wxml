<!--pages/posts/posts.wxml-->
<view>
  <swiper autoplay="true" indicator-dots="true" indicator-color="white" indicator-active-color="skyblue">
    <swiper-item>
      <image src="/images/slide-1.jpg"></image>
      <view class="slide-desc">
        <text>Cruise Ship</text>
      </view>
    </swiper-item>
    <swiper-item>
      <image src="/images/slide-2.jpg"></image>
      <view class="slide-desc">
        <text>Oil Tanker</text>
      </view>
    </swiper-item>
    <swiper-item>
      <image src="/images/slide-3.jpg"></image>
      <view class="slide-desc">
        <text>Container Ship</text>
      </view>
    </swiper-item>
  </swiper>
  <view wx:for="{{posts}}" wx:key="{{item.title}}">
    <view class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{item.authorAvatar}}"></image>
        <text class="post-date">{{item.publishDate}}</text>
      </view>
      <text class="post-title">{{item.title}}</text>
      <image class="post-pic" src="{{item.contentPic}}"></image>
      <text class="post-desc">{{item.desc}}</text>
      <view class="post-info">
        <image src="/images/icons/msg.png"></image>
        <text>{{item.msgNum}}</text>
        <image src="/images/icons/view.png"></image>
        <text>{{item.viewNum}}</text>
      </view>
    </view>
  </view>
</view>