/* pages/posts/posts-detail/posts-detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}
.header{
  position: relative;
}
.header .post-pic{
  width: 100%;/*width: 750rpx*/
  height: 300rpx;
}
.header .music-img{
  position: absolute;
  width: 128rpx;
  height: 128rpx;
  top: 50%;
  left: 50%;
  margin-left: -64rpx;
  margin-top: -64rpx;
  opacity: 0.6;
}
.post-info{
  flex-direction: row;
}
.post-info image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.post-info text{
  vertical-align: middle;
  color: #666;
}
.title{
  margin: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}
.collect-share{
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.collect-share .cross-line{
  position: relative;
  top: 45rpx;
  width: 100%;
  height: 1rpx;
  background-color: #ccc;
  z-index: -99
}
.collect-share image{
  float: right;
  width: 90rpx;
  height: 90rpx;
}
.collect-share image.share-img{
  margin-left: 30rpx;
}
.content{
  margin: 20rpx 30rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #666;
}